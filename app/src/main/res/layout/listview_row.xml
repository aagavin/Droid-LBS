<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewId"
        android:layout_width="@dimen/list_view_row_img_width"
        android:layout_height="@dimen/list_view_row_img_height"
        android:layout_margin="@dimen/list_view_row_img_margin"
        android:layout_weight="@dimen/one"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_view_row_margin"
        android:layout_weight="@dimen/one"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/list_view_row_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addressViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</LinearLayout>
